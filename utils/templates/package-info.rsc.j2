# Code generated by script. DO NOT EDIT.

# core package meta list
:local packageList {
	{% for meta in package_mapping.values() %}
	{
		"name"="{{ meta.name }}";
		{% if meta.author %}
		"author"="{{ meta.author }}";
		{% endif %}
		"description"="{{ meta.description }}";
		"version"="{{ meta.version }}";
		"essential"={{ "true" if meta.essential else "false" }};
		"global"={{ "true" if meta.global else "false" }};
		{% if meta["global-variables"] %}
		"global-variables"={
			{% for var in meta["global-variables"] %}
			"{{ var }}";
			{% endfor %}
		};
		{% endif %}
		{% if meta["global-functions"] %}
		"global-functions"={
			{% for func in meta["global-functions"] %}
			"{{ func }}";
			{% endfor %}
		};
		{% endif %}
	};
	{% endfor %}
};

# core package meta mapping, use with list.
:local packageMapping {
	{% for name in package_mapping %}
	"{{ name }}"={{ loop.index0 }};
	{% endfor %}
}

# the minimum requirement packages of rospm
:local essentialPackageList {
	{% for name in essential_package_list %}
	"{{ name }}";
	{% endfor %}
}

:local packageInfo {
	"packageList"=$packageList;
	"packageMapping"=$packageMapping;
	"essentialPackageList"=$essentialPackageList;
}

:return $packageInfo;
